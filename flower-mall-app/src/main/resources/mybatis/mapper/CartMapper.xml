<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.infrastructure.dao.ICartDao">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="org.example.infrastructure.dao.po.Cart">
        <id column="id" property="id" />
        <result column="fid" property="fid" />
        <result column="flower" property="flower" />
        <result column="amount" property="amount" />
        <result column="price" property="price" />
        <result column="uid" property="uid" />
    </resultMap>

    <!-- 通用列片段 -->
    <sql id="Base_Column_List">
        id, fid, flower, amount, price, uid
    </sql>

    <!-- 1. 根据用户ID查询列表 (Repository组装聚合根用) -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from carts
        where uid = #{uid}
    </select>

    <!-- 2. 插入新记录 (Repository保存新Item用) -->
    <!-- keyProperty="id" 表示把数据库生成的自增ID填回到 PO 对象的 id 属性中 -->
    <insert id="insert" parameterType="org.example.infrastructure.dao.po.Cart"
            useGeneratedKeys="true" keyProperty="id">
        insert into carts (fid, flower, amount, price, uid)
        values (#{fid}, #{flower}, #{amount}, #{price}, #{uid})
    </insert>

    <!-- 3. 更新数量 (Repository更新旧Item用) -->
    <update id="updateAmount" parameterType="org.example.infrastructure.dao.po.Cart">
        update carts
        set amount = #{amount}
        where id = #{id}
    </update>

    <!-- 4. 删除 (测试用，或者清理购物车用) -->
    <delete id="deleteById">
        delete from carts where id = #{id}
    </delete>
</mapper>
